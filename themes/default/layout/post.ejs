<!-- BEGIN post -->
<div class="sidebar blog">
  <div class="sidebar-inner">
    <div class="list">
      <h2>
        所有文章
      </h2>
      <ul style="padding: 0;">
      <% site.posts.sort('date', -1).each(function (post) { %>
        <li>
          <a href="/<%- post.path %>" class="sidebar-link <%- is_current(post.path) ? 'current' : '' %>"><%- post.title %></a>
        </li>
      <% }) %>
      </ul>
    </div>
  </div>
</div>
<div class="content with-sidebar blog post">
  <h1><%- page.title %></h1>

  <% if(page.path.endsWith('index.html')) { %>
    <script>
      window.location.href = '<%- url_for(site.posts.sort("date", -1).first().path) %>';
    </script>
  <% } %>

  <%- page.content %>

  <%- partial('partials/footer', {min: true}) %>
</div>
<!-- END post -->