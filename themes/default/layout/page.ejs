<!-- BEGIN page -->
<%
  page.mapped_title = '';
  if(page.type && !page.title && page.path.endsWith('index.html'))
    page.mapped_title = site.data.sitemap[page.type].name;
  else
    page.mapped_title = (page.title || '').trim()
%>

<%- partial('partials/sidebar', { hasSidebar: page.sidebar !== false}) %>

<article id="article" class="content">
  <% if (page.mapped_title && page.type) { %>
    <section><h1><%= page.mapped_title %></h1></section>
  <% } %>
  
  <%- page.content %>

  <%- partial('partials/footer', {min: !page.full_footer}) %>
</article>
<!-- END page -->
