<% if (page.type) { %>
  <%- partial('partials/sidebar', { type: page.type, index: page.index }) %>
<% } %>

<div class="content <%- page.type ? page.type + ' with-sidebar' : '' %>">
  <% if (page.title.trim()) { %>
    <h1><%= page.title %></h1>
  <% } %>
  
  <%- page.content %>

  <%- partial('partials/footer', {min: !!page.type}) %>
</div>
