@import "_fonts"
  
hide-for-print()
  @media print
    display: none
    
caption-style($counter, $prefix = "", $sep = "." , $suffix = " ")
  counter-increment: $counter 
  &::before
    content: $prefix counter(h2) $sep counter($counter) $suffix

// colors
$dark   = #2c3e50
$medium = #34495e
$light  = #7f8c8d
$theme  = #4285F4
$border = #dddddd
$codebg = #f8f8f8
$shadow = rgba(0,0,0,0.5)
$quotebg = rgba(#fffdf4, 0.5)
$quotebd = $border
$red = #ff6666
$info = #1C90F3

$sidebg = alpha(#f9f9f9, 0.95)

// main settings
$padding = 80px
$mobile-padding = 40px

// header settings
$header-inner-height = 40px
$heading-padding-vertical = 13px
$header-height = $header-inner-height + $heading-padding-vertical * 2

$mobile-header-inner-height = 24px
$mobile-heading-padding-vertical = 8px
$mobile-header-height = $mobile-header-inner-height + $mobile-heading-padding-vertical * 2

$size-transition = .4s cubic-bezier(0.4, 0, 0, 1)

$fixed-sidebar-width = 1024px
$mobile-width = 980px

$sidebar-width = 320px
$page-min-width = 320px