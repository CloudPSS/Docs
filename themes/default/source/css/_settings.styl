// font faces
$body-font = "Microsoft Yahei UI", "Helvetica Neue", Arial, sans-serif
$logo-font = "Segoe UI Symbol", "Microsoft Yahei UI", "Helvetica Neue", Arial, sans-serif
$code-font = "Monaco", "Consolas", "courier",  monospace

no-user-select()
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

// font sizes
$body-font-size = 15px
$code-font-size = .8em

// colors
$dark   = #2c3e50
$medium = #34495e
$light  = #7f8c8d
$theme  = #4285F4
$border = #dddddd
$codebg = #f8f8f8
$shadow = rgba(0,0,0,0.5)
$quotebg = rgba(#fffdf4, 0.5)
$quotebd = $border
$red = #ff6666
$info = #1C90F3

$radius = 2px
$content-padding-top = 30px

// header settings
$header-inner-height = 40px
$heading-padding-vertical = 10px
$header-height = $header-inner-height + $heading-padding-vertical * 2

$mobile-header-inner-height = 24px
$mobile-heading-padding-vertical = 8px
$mobile-header-height = $mobile-header-inner-height + $mobile-heading-padding-vertical * 2

// prevent headers from being covered by the top nav upon navigation
$heading-link-padding-top = $header-height + $content-padding-top
$mobile-heading-link-padding-top = $mobile-header-height + $content-padding-top
$h2-margin-top = 48px
$h3-margin-top = 40px


$size-transition = .4s cubic-bezier(0.4, 0, 0, 1)

$mobile-width = 1000px
