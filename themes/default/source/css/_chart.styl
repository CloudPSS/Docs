@import "_fonts"
@import "_settings"

pre.mermaid-error
  background: red
  color: white

div.mermaid
  display:none
    
div.mermaid[data-processed]
  display: block
  overflow-x: auto
  position: relative
  margin: 1em 0
  page-break-inside: avoid
  & > svg
    display: block
    margin: auto
  
canvas.chartjs
  margin: 1em 0
  page-break-inside: avoid
  
img, svg
  border: none
  
svg *
  no-user-select()
  
mx-graph
  &:empty
    height: 150px
  display: block
  text-align: center
  overflow: auto
  svg
    display: inline !important
p mx-graph
  display: inline-block
