@import "_fonts"
@import "_settings"

pre.mermaid-error
  background: red
  color: white

div.mermaid
  display:none
    
div.mermaid[data-processed]
  display: block
  overflow-x: auto
  position: relative
  margin: 1em 0
  page-break-inside: avoid
  & > svg
    display: block
    margin: auto
  
canvas.chartjs
  margin: 1em 0
  page-break-inside: avoid
  
svg *
  user-select: none
