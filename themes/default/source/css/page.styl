@import "_common"
@import "_animations"
@import "_header"
@import "_footer"
@import "_sidebar"
@import "_modal"
@import "_chart"

#buorg.buorg
  no-user-select()
@media print
  #buorg.buorg
    display: none

.content
  position: relative
  padding: 2.2em 0
  max-width: 600px
  margin: 0 auto
  padding-left: 50px
  a.button
    font-size: .9em
    color: #fff
    margin: .2em 0
    width: 180px
    text-align: center
    padding: 12px 24px
    display: inline-block
    vertical-align: middle
  img
    max-width: 100%
  span.light
    color: $light
  span.info
    font-size: .85em
    display: inline-block
    vertical-align: middle
    width: 280px
    margin-left: 20px
  h1
    font-size: 2em
    margin: 0 0 1em
  h2, h3, h4, h5, h6
    position: relative
    &:before
      content: ""
      display: block
      margin-top: -24px
      height: 24px
      visibility: hidden
    > :link, > :visited
      position: relative // make it clickable
    > a.markdownIt-Anchor:before
      no-user-select()
      content: "#"
      color: $theme
      position: absolute
      transform: translate(-0.8em, 0.2em)
      padding-right: 1em
      font-weight: bold
      height:1.2em
    > a.markdownIt-Anchor
      position: absolute
      left: 0
      right: 0    
      transform: translateY(-0.2em);
      height: 1.6em
      opacity: 0
      transition: opacity 0.1s ease
    &:hover > a.markdownIt-Anchor
      opacity: 1
  h2
    font-size: 1.5em
    margin: $h2-margin-top 0 .8em
    padding-bottom: .7em
    border-bottom: 1px solid $border
    & + h3
      margin-top: 2em
  h3
    font-size: 1.2em
    margin: $h3-margin-top 0 1.2em
    line-height: 1.2
  figure
    margin: 1.2em 0
  p, ul, ol
    margin: 1em 0
    line-height: 1.6em
    z-index: 1
  li
    margin: 0.5em 0
  p.katex-block
    page-break-before: avoid
    overflow-x: auto
    position: relative
  ul, ol
    padding-left: 1.5em
    // FIX: Some link click targets are covered without this
    position: inherit
  a
    color: $theme
    font-weight: 600
    code, pre
      color: $theme
  hr.footnotes-sep
    margin: 48px -12px 0 -12px
    
  iframe
    margin: 1em 0
  > table
    border-spacing: 0
    border-collapse: collapse
    margin: 1.2em auto
    padding: 0
    display: block
    overflow-x: auto
    td, th
      line-height: 1.5em
      padding: .4em .8em
      border: none
      border: 1px solid $border
    th
      font-weight: bold
      text-align: left
      min-width: 32px
    th, tr:nth-child(2n)
      background-color: #f8f8f8
      code
        background-color: #efefef
        
.gist .gist-meta
  no-user-select()

@media screen and (max-width: 1300px)
  .content.with-sidebar
    margin-left: 260px

@media screen and (max-width: $mobile-width)
  body
    -webkit-text-size-adjust: none
    font-size: 14px
  .content
    padding-left: 0
    &.with-sidebar
      margin: auto

@media print
  .content
    padding: 0
  #main 
    top: 0
    padding: 0
  h2, h3
    > a.markdownIt-Anchor:before
      display: none
  .gist
    page-break-inside: avoid
    .gist-data
      page-break-inside: avoid
    .gist-meta 
      a[style*='float']
        display: none
      a[href$='github.com'], a[href$='github.com/']
        &:link:after, &:visited:after
          content: ""
