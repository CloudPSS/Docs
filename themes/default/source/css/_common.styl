@import "_fonts"
@import "_settings"
@import "_codeblock"
@import "_quoteblock"
@import "_video"

.katex-error
  background: red
  color: white
p.katex-block
  page-break-before: avoid
  page-break-inside: avoid
  overflow-x: auto
  overflow-y: hidden
  position: relative
  > .katex-display
    margin: 0

body
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  margin: 0
  font-family: $body-font
  font-size: $body-font-size
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  color: $medium
  background-color: white
  &.docs
    padding-top: $header-height

@media screen and (max-width: $mobile-width)
  body.docs
    padding-top: $mobile-header-height

a
  text-decoration: none

img
  border: none

h1, h2, h3, h4, strong
  font-weight: 600
  color: $dark

hr
  border-color: $border
  color: rgba(0,0,0,0)
  border-width: 1px 0
  border-top: solid 

em
  color: $light

p
  word-spacing: 0.05em

#main
  position: absolute
  top: $header-height
  left: 0
  right: 0
  bottom: 0
  z-index: 1
  padding: 0 60px 30px 60px
  overflow-x: hidden

abbr[title]
  text-decoration: solid
  cursor: help
  &:after
    no-user-select()
    content: "[?]"
    vertical-align: super
    font-size: xx-small
br
  word-spacing: 0
    
a.footnote-backref
  no-user-select()

@media screen and (max-width: $mobile-width)
  #main
    top: $mobile-header-height
    padding: 0 20px 20px 20px

@media print
  body, #main
    position: static
    color: rgb(0,0,0)
  mark
    text-decoration-line: underline !important
    text-decoration-color: yellow !important
    text-decoration-style: wavy
  h1,h2,h3,h4,h5
    color: rgb(0,0,0)
    page-break-after: avoid
    page-break-before: avoid
  img
    page-break-inside: avoid
  h2+p
    page-break-before: avoid
  a.footnote-backref
    display: none
  a:link:after, a:visited:after { content:" [" attr(href) "] "; }
  sup.footnote-ref > a, a.markdownIt-Anchor
    &:link:after, &:visited:after
       content:""
  abbr[title]:after
      content: "[" attr(title) "]"
  
