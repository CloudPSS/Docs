@import "_fonts"
@import "_settings"
@import "_codeblock"
@import "_quoteblock"
@import "_video"

body
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  margin: 0
  font-family: $body-font
  font-size: $body-font-size
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  color: $medium
  background-color: white
  &.docs
    padding-top: $header-height

@media screen and (max-width: 900px)
  body.docs
    padding-top: $mobile-header-height

a
  text-decoration: none
  color: $medium

img
  border: none

h1, h2, h3, h4, strong
  font-weight: 600
  color: $dark

hr
  border-color: $border
  color: rgba(0,0,0,0)
  border-width: 1px 0
  border-top: solid 

em
  color: $light

p
  word-spacing: 0.05em

a.button
  padding: 0.75em 2em
  border-radius: 2em
  display: inline-block
  color: #fff
  background-color: lighten($theme, 8%)
  transition: all .15s ease
  box-sizing: border-box
  border: 1px solid lighten($theme, 8%)
  &.has-icon
    position: relative
    text-indent: 1.4em;
    > svg
      position: absolute
      left: 0.4em
      top: 0.4em
      width: 2em
  &.white
    background-color: #fff
    color: $theme
  &.gray
    background-color: #f6f6f6
    color: $light
    border-color: #f6f6f6

#main
  position: absolute
  top: $header-height
  left: 0
  right: 0
  bottom: 0
  z-index: 1
  padding: 0 60px 30px 60px
  overflow-x: hidden

@media screen and (max-width: 900px)
  #main
    top: $mobile-header-height
    padding: 0 20px 20px 20px

#nav
  .nav-link
    cursor: pointer
  .nav-dropdown-container
    .nav-link
      &:hover:not(.current)
        border-bottom: none
    &:hover
      .nav-dropdown
        display: block
    &.language, &.ecosystem
      margin-left: 20px
    .arrow
      pointer-events: none
  .nav-dropdown
    display: none
    box-sizing: border-box
    max-height: "calc(100vh - %s)" % $header-height
    overflow-y: auto
    position: absolute
    top: 100%
    right: -15px
    background-color: #fff
    padding: 10px 0
    border: 1px solid $border
    border-bottom-color: #ccc
    text-align: left
    border-radius: 4px
    white-space: nowrap
    li
      line-height: 1.8em
      margin: 0
      display: block
      > ul
        padding-left: 0
      &:first-child
        h4
          margin-top: 0
          padding-top: 0
          border-top: 0
    a, h4
      padding: 0 24px 0 20px
    h4
      // text-transform: uppercase
      margin: .45em 0 0
      padding-top: .45em
      border-top: 1px solid #eee
    a
      color: lighten($dark, 10%)
      font-size: .9em
      display: block
      &:hover
        color: $theme
  .arrow
    display: inline-block
    vertical-align: middle
    margin-top: -1px
    margin-left: 6px
    margin-right: -14px
    width: 0
    height: 0
    border-left: 4px solid transparent
    border-right: 4px solid transparent
    border-top: 5px solid #ccc

sup.beta.beta
  font-size: .6em
  margin-left: .7em
  text-transform: uppercase
  opacity: .6

abbr
  text-decoration: solid
  &:after
    no-user-select()
    content: "[?]"
    vertical-align: super
    font-size: xx-small
    
a.footnote-backref
  no-user-select()

@media print
  body, #main
    position: static
    color: rgb(0,0,0)
  mark
    text-decoration-line: underline !important
    text-decoration-color: yellow !important
    text-decoration-style: wavy
  h1,h2,h3,h4,h5
    color: rgb(0,0,0)
    page-break-after: avoid
    page-break-before: avoid
  img
    page-break-inside: avoid
  h2+p
    page-break-before: avoid
  a.footnote-backref
    display: none
  a:link:after, a:visited:after { content:" [" attr(href) "] "; }
  sup.footnote-ref > a, a.markdownIt-Anchor
    &:link:after, &:visited:after
       content:""
  abbr:after
      content: "[" attr(title) "]"
  
