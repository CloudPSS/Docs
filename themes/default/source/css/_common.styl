@import "_fonts"
@import "_settings"
@import "_codeblock"
@import "_quoteblock"
@import "_video"
@import "_katex"

body
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  margin: 0
  font-family: $body-font
  font-size: $body-font-size
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  color: $medium
  background-color: white
  padding-top: $header-height

@media screen and (max-width: $mobile-width)
  body
    padding-top: $mobile-header-height

img, svg
  border: none
  
mx-graph
  display: block
  text-align: center
  overflow: auto
  svg
    display: inline !important
    *
      no-user-select()
p mx-graph
  display: inline-block

h1, h2, h3, h4, strong
  font-weight: 600
  color: $dark

hr
  border-color: $border
  color: rgba(0,0,0,0)
  border-width: 1px 0
  border-top: solid 

em
  color: $light

p
  word-spacing: 0.05em

#main
  position: absolute
  top: $header-height
  left: 0
  right: 0
  bottom: 0
  z-index: 1
  padding: 0 60px 30px 60px
  overflow-x: hidden

abbr[title]
  cursor: help
  border-bottom: 1px dotted #777
  @media print 
    &:after
      content: "(" attr(title) ")"
      color: #777
      
br
  word-spacing: 0
   
a
  text-decoration: none 
  &.footnote-backref
    no-user-select()

@media screen and (max-width: $mobile-width)
  #main
    top: $mobile-header-height
    padding: 0 20px 20px 20px

@media print
  body, #main
    position: static
    color: rgb(0,0,0)
  mark
    border: 2px solid yellow !important
  h1,h2,h3,h4,h5
    color: rgb(0,0,0)
    page-break-after: avoid
    page-break-before: avoid
  img
    page-break-inside: avoid
  h2+p
    page-break-before: avoid
  a.footnote-backref
    display: none
  a:link:after, a:visited:after { content:" [" attr(href) "] "; }
  sup.footnote-ref > a, a.markdownIt-Anchor
    &:link:after, &:visited:after
       content:""
  
