
@import "_settings"

footer.page-footer
  color: $light
  no-user-select()
  border-top: 0.2px $border solid
  margin: 48px -48px
  padding: 0 48px
  text-align: center 
  &.min
    text-align: right 
    .author
      color: lighten($theme, 0.2)
      &:before   
        content: ""
        box-shadow: 0 0 0.5px $shadow
        display: inline-block
        height: 1.8em
        width: 1.8em
        border-radius: 100em
        background-size: contain
        vertical-align: middle
    > .contact
      margin-left: -0.5em
      > span
        margin-left: 0.5em
  span
    white-space: nowrap
  p
    padding-bottom: 0 !important
  hr
    margin: 40px -40px 0 -40px
  a
    color: @color
    font-weight: unset

    
  @media print
    page-break-inside: avoid