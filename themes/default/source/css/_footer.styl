
@import "_settings"

footer.page-footer.min
  color: $light
  text-align: right 
  > .contact
    margin-left: -0.5em
    .section
      margin-left: 0.5em

footer.page-footer
  no-user-select()
  border-top: 0.2px $border solid
  margin: 48px -48px
  padding: 0 48px
  text-align: center 
  .section
    white-space: nowrap
  p
    padding-bottom: 0 !important
  hr
    margin: 40px -40px 0 -40px
  .gravatar
    height: 1.8em
    vertical-align: bottom
    border-radius: 1em
    border: 0.2px solid $border

    
@media print
  footer.page-footer
    page-break-inside: avoid