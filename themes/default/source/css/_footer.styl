
@import "_settings"

footer.page-footer.min
  text-align: right 
  color: $light
  #footer-author-link
    color: lighten($theme, 0.2)
  > .contact
    margin-left: -0.5em
    .section
      margin-left: 0.5em

footer.page-footer
  color: $dark 
  no-user-select()
  border-top: 0.2px $border solid
  margin: 48px -48px
  padding: 0 48px
  text-align: center 
  .section
    white-space: nowrap
  p
    padding-bottom: 0 !important
  hr
    margin: 40px -40px 0 -40px
  a
    color: $dark
    font-weight: unset
  .gravatar    
    box-shadow: 0 0 0.5px $shadow;
    height: 1.8em
    vertical-align: bottom
    border-radius: 1em

    
@media print
  footer.page-footer
    page-break-inside: avoid