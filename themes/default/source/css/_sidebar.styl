@import "_settings"

aside.sidebar
  transition: all $size-transition
  box-shadow: 0 0 8px $shadow
  position: fixed
  z-index: 10
  top: 0
  left: 0
  bottom: 0
  width: 260px
  background: white
  overflow-x: hidden
  overflow-y: auto
  margin-top: $header-height
  padding: 0 20px 0 40px
  .sidebar-inner
    margin: $content-padding-top + 20px 0 20px
  h2
    margin-top: .2em
  li, p
    margin: 0.5em 0 0 0
  ul
    list-style-type: none
    margin: 0
    line-height: 1.5em
    padding-left: 0.5em
    > p.menu-cate-name
      color: $medium
      margin-left: -0.5em
      font-weight: 550
  ul.menu-root
    padding-left: 0
  ul.menu-sub
    font-size: .85em
  .sidebar-link, .section-link
    border: 0px solid transparent
    transition: all .2s ease
  .sidebar-link
    border-bottom-width: 2px
    color: $medium
    &.current
      font-weight: 600
      color: $theme
    &:hover, &:focus
      border-color: $theme
  .section-link
    border-left-width: 2px
    color: $light
    padding-left: .5em
    &.active
      border-color: $theme
    &:hover, &:focus
      color: $theme
  .main-menu
    margin-bottom: 20px
    display: none
    padding-left: 0
  .nav-dropdown
    h4
      font-weight: normal
      margin: 0

@media screen and (max-width: $mobile-width)
  aside.sidebar
    background: #f9f9f9
    transform: translate(-105%, 0)
    padding: 0 10px 0 20px
    margin-top: $mobile-header-height
    .sidebar-inner-index
      padding: 10px 10px 10px 20px
    .main-menu
      display: block
    &.open
      transform: translate(0, 0)

@media print
  aside.sidebar
    display: none