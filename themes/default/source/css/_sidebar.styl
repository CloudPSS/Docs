@import "_settings"

aside.sidebar
  transition: all $size-transition
  box-shadow: 0 0 8px $shadow
  position: fixed
  z-index: 10
  top: 0
  left: 0
  bottom: 0
  width: 260px
  background: white
  overflow-x: hidden
  overflow-y: auto
  margin-top: $header-height
  padding: 0 20px 0 40px
  nav.list
    margin: $content-padding-top + 20px 0 20px
  h1
    font-size: 1.5em
    margin-top: .2em
  h2
    font-size: 1.3em
  h3
    font-size: 1.1em
  h4, h5, h6
    font-size: 1em
  li, .menu-cat-name
    margin: 0
    padding: 8px 0 0 0
  ul
    list-style-type: none
    margin: 0
    padding: 0
    line-height: 1.5em
    &.menu-root
      padding-left: 0
    &.menu-cat
      padding-left: 8px
      > .menu-cat-name
        color: $medium
        margin-left: -0.5em
        font-weight: 550
        margin-left: -8px
    &.menu-sub
      font-size: .85em
      .section-link
        padding-left: 6px
      > ul .section-link
        padding-left: 14px
  .sidebar-link, .section-link
    border: 0px solid transparent
    transition: all .2s ease
  .sidebar-link
    border-bottom-width: 2px
    color: $medium
    &.current
      font-weight: 600
      color: $theme
    &:hover, &:focus
      border-color: $theme
  .section-link
    margin-left: 2px
    border-left-width: 2px
    color: $light
    padding-left: .5em
    &.active
      border-color: $theme
    &:hover, &:focus
      color: $theme

@media screen and (max-width: $mobile-width)
  aside.sidebar
    background: #f9f9f9
    transform: translate(-105%, 0)
    padding: 0 10px 0 20px
    margin-top: $mobile-header-height
    &.open
      transform: translate(0, 0)

@media print
  aside.sidebar
    display: none