$shadow = alpha(black, 0.3)

#vueindex
  .container
    margin: auto
    overflow-x: auto
    text-align: center
  .card-panel
    z-index: 1
    text-align: left
    display: block
    position: relative
    vertical-align: middle
    margin: 12px
    height: 200px
    background: #fdfdfd
    box-shadow: 0px 4px 10px 2px $shadow
    transition: all 0.5s ease
    &:hover, &:focus
      box-shadow: 0px 6px 12px 4px $shadow
      transform: translateY(-4px)
  .caption
    color: #888
    font-size: 0.75em
  .parallax 
    height: 500px
    background-attachment: fixed
    background-position: center
    background-repeat: no-repeat
    background-size: cover
    margin: -72px -8px
    background-image: url(./bg.jpg)
  .button
    display: inline-block
    text-align: center
    transition: all 0.5s ease
    background: #4285f4
    padding: 8px
    color: white
    box-shadow: 0 0 2px #999
    border-radius: 1px
    &:hover, &:focus
      box-shadow: 0 0 6px #999
  .center
    margin-left: auto
    margin-right: auto
  .download
    .container
      max-width: 720px
    .card-panel
      margin: 24px 12px
      > div    
        z-index: 10
        padding: 1em
        h3
          margin: 0
          padding: 0
      > img
        margin-left: 1em
        height: 100%
        float: right
      .desc
        margin: 0.5em 0
      .button
        position: absolute
        min-width: 80px
        bottom: 1em
        left: 1em
        