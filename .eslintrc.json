{
  "root": true,
  "plugins": ["@typescript-eslint", "prettier", "jsdoc"],
  "env": {
    "commonjs": true,
    "browser": true
  },
  "overrides": [
    {
      "files": ["*.js"],
      "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
      },
      "extends": ["eslint:recommended", "plugin:prettier/recommended"],
      "rules": {
        "no-unused-vars": [
          1,
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
          }
        ]
      }
    },
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": "tsconfig.json"
      },
      "parser": "@typescript-eslint/parser",
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:@angular-eslint/recommended",
        "plugin:jsdoc/recommended",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "jsdoc/require-yields": 0,
        "jsdoc/require-returns": 0,
        "@typescript-eslint/prefer-for-of": [1],
        "@typescript-eslint/ban-types": [
          1,
          {
            "types": {
              "object": false
            }
          }
        ],
        "jsdoc/require-jsdoc": [
          1,
          {
            "contexts": [
              "TSMethodSignature",
              "TSInterfaceDeclaration",
              "TSTypeAliasDeclaration",
              "MethodDefinition[ kind=/(method|get)/ ]:has(FunctionExpression)",
              {
                "inlineCommentBlock": true,
                "context": "ClassProperty"
              },
              {
                "inlineCommentBlock": true,
                "context": "TSInterfaceBody > TSPropertySignature"
              }
            ],
            "require": {
              "ClassDeclaration": true,
              "FunctionDeclaration": true
            }
          }
        ],
        "@typescript-eslint/array-type": [
          1,
          {
            "default": "array-simple"
          }
        ],
        "jsdoc/require-param": 0,
        "@typescript-eslint/no-extraneous-class": [
          1,
          {
            "allowWithDecorator": true,
            "allowStaticOnly": true
          }
        ],
        "jsdoc/require-param-type": 0,
        "jsdoc/no-types": 1,
        "no-console": [1],
        "@typescript-eslint/prefer-nullish-coalescing": [1],
        "@typescript-eslint/prefer-optional-chain": [1],
        "jsdoc/require-description": [
          1,
          {
            "contexts": ["any"]
          }
        ],
        "@typescript-eslint/no-unused-vars": [
          1,
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
          }
        ],
        "@typescript-eslint/prefer-function-type": [1],
        "jsdoc/require-returns-type": 0,
        "@typescript-eslint/no-parameter-properties": [
          1,
          {
            "allows": ["protected readonly", "private readonly", "public readonly", "readonly"]
          }
        ],
        "no-unused-vars": [0],
        "jsdoc/require-returns-check": 0,
        "eqeqeq": [1, "smart"],
        "@typescript-eslint/explicit-function-return-type": [
          2,
          {
            "allowExpressions": true
          }
        ],
        "prettier/prettier": [1],
        "no-void": [
          1,
          {
            "allowAsStatement": true
          }
        ],
        "@typescript-eslint/no-throw-literal": [2]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {
        "@angular-eslint/template/eqeqeq": [1, { "allowNullOrUndefined": true }]
      }
    }
  ]
}
